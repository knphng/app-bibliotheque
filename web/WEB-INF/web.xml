<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <listener>
        <listener-class>ch.hesge.programmation.db.BooksDatabase</listener-class>
    </listener>
    <security-role>
        <role-name>USER</role-name>
    </security-role>
    <security-role>
        <role-name>TEST</role-name>
    </security-role>
    <servlet>
        <servlet-name>Default</servlet-name>
        <servlet-class>ch.hesge.programmation.servlet.DefaultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Default</servlet-name>
        <url-pattern>/accueil</url-pattern>
        <url-pattern>/index.html</url-pattern> <!-- permet d'afficher accueil au dÃ©marrage du serveur -->
    </servlet-mapping>
    <servlet>
        <servlet-name>Books</servlet-name>
        <servlet-class>ch.hesge.programmation.servlet.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Books</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateBook</servlet-name>
        <servlet-class>ch.hesge.programmation.servlet.BookCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateBook</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateBook</servlet-name>
        <servlet-class>ch.hesge.programmation.servlet.BookUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBook</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteBook</servlet-name>
        <servlet-class>ch.hesge.programmation.servlet.BookDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBook</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ch.hesge.programmation.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ch.hesge.programmation.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure pages</web-resource-name>
            <url-pattern>/create</url-pattern>
            <url-pattern>/delete</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>TEST</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
